@model GRHelper.Web.ViewModels.Administration.Reservations.CreateReservationInputModel
@{
    this.ViewData["Title"] = "Create A Reservation";
}

<h1>Create a new reservation</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="From"></label>
        <input asp-for="From" class="form-control" />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To"></label>
        <input asp-for="To" class="form-control" />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdultsCount"></label>
        <input asp-for="AdultsCount" class="form-control" />
        <span asp-validation-for="AdultsCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChildrenCount"></label>
        <input asp-for="ChildrenCount" class="form-control" value=0 placeholder=0 />
        <span asp-validation-for="ChildrenCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Villa"></label>
        <input asp-for="Villa" class="form-control" />
        <span asp-validation-for="Villa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
</form>
