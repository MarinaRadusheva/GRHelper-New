@using GRHelper.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model int
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Vaya Beach Resort!</h1>
    <hr />
    <h3>Your Guest Relations Team is here to make your vacation experience incredible!</h3>
</div>
<hr />

@if (SignInManager.IsSignedIn(this.User))
{
    if (@Model != 0)
    {
        <div id="unlockedReservations" class="align-self-center mx-auto mt-5 align-content-center text-center" style="border-style: solid; border-radius: 10px; border-color: darkslategrey; background-color: lightgrey">
            <h3>You have <a asp-controller="Reservations" asp-action="UnlockedReservations" title="Go to unlocked reservations">@Model</a> unlocked reservation/s.</h3>
        </div>
    }
    <partial name="_NewRequestPartial" />
}
else
{
    <div id="notLoggedInDiv" class="align-self-center mx-auto align-content-center text-center" style="width:60%">
        <h4>
            You are not logged in. To manage your requests to our Guest Relations Team, please
            <a class="text-info" asp-area="Identity" asp-page="/Account/Login">login</a> or
            <a class="text-info" asp-area="Identity" asp-page="/Account/Register">register</a>.
        </h4>
    </div>
}
