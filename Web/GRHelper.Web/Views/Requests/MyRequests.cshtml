@model IEnumerable<GRHelper.Web.ViewModels.Guests.Requests.RequestListViewModel>

@{
    this.ViewData["Title"] = "My Requests";
}

<h2>My Requests</h2>


@if (!Model.Any())
{
    <h3>You have no requests yet.</h3>
}
else
{
    <table class="table table-bordered table-light table-striped requestsTable">
        <tr>
            <th class="col-1">Reservation No</th>
            <th>Service</th>
            <th>Date</th>
            <th>Time</th>
            <th class="col-1">Guest Count</th>
            <th>Cost</th>
            <th>Status</th>
            <th>Manage</th>
        </tr>
        @foreach(var request in @Model)
        {
            <tr>
                <td>
                    @request.ReservationNumber
                </td>
                <td>
                    @request.HotelServiceName
                </td>
                <td>
                    @request.Date.ToShortDateString()
                </td>
                <td>
                    @request.Time.ToString(@"hh\:mm")
                </td>
                <td>
                    @request.GuestCount
                </td>
                <td>
                    @(@request.Price != null ? (@request.Price + " BGN") : "-")
                </td>
                <td>
                    @request.RequestStatus
                </td>
                <td>
                    Edit, cancel, delete?
                </td>
            </tr>
        }
    </table>
}
